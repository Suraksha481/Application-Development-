@page "/add-journal"
@page "/add-journal/{EntryId:int}"
@using JournalProject.Models
@using JournalProject.Services
@inject JournalService JournalService
@inject SecurityService SecurityService
@inject StreakService StreakService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>@(IsEditMode ? "‚úèÔ∏è Edit Journal" : "üìù Write New Journal")</h2>
                @if (IsEditMode && CurrentEntry?.IsLocked == true)
                {
                    <div class="alert alert-warning mb-0" role="alert">
                        <strong>üîí Locked</strong>
                        <button class="btn btn-sm btn-warning ms-2" @onclick="OpenUnlockDialog">
                            üîì Unlock
                        </button>
                    </div>
                }
            </div>

            @if (IsEditMode && CurrentEntry?.IsLocked == true)
            {
                <div class="alert alert-danger">
                    <strong>Cannot Edit - Journal is Locked</strong><br />
                    This journal is protected with a @(CurrentEntry?.PasswordType ?? "password"). Unlock it to make changes.
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    <form @onsubmit="SaveEntry" id="journalForm">
                        <!-- Title -->
                        <div class="mb-4">
                            <label class="form-label">Title *</label>
                            <input type="text" class="form-control" @bind="CurrentEntry!.Title" 
                                   placeholder="Give your journal a title..." 
                                   disabled="@(IsEditMode && CurrentEntry?.IsLocked == true)"
                                   required />
                        </div>

                        <!-- Content with Rich Text Editor -->
                        <div class="mb-4">
                            <label class="form-label">Content *</label>
                            <RichTextEditor 
                                Content="@(CurrentEntry?.Content ?? "")" 
                                ContentChanged="@((value) => HandleContentChanged(value))"
                                Disabled="@(IsEditMode && CurrentEntry?.IsLocked == true)" />
                            @if (string.IsNullOrEmpty(CurrentEntry?.Content))
                            {
                                <div class="invalid-feedback d-block">Content is required</div>
                            }
                        </div>

                        <!-- Mood Selection -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Primary Mood *</label>
                                    <small class="text-muted d-block mb-2">Choose your main mood</small>
                                    <select class="form-select" @bind="CurrentEntry!.PrimaryMood" @bind:after="OnPrimaryMoodChanged" required>
                                        <option value="">Select a mood...</option>
                                        <optgroup label="üòä Positive">
                                            @foreach (var mood in MoodCategories.GetMoodsByCategory("Positive") ?? new())
                                            {
                                                <option value="@mood">@mood</option>
                                            }
                                        </optgroup>
                                        <optgroup label="üòê Neutral">
                                            @foreach (var mood in MoodCategories.GetMoodsByCategory("Neutral") ?? new())
                                            {
                                                <option value="@mood">@mood</option>
                                            }
                                        </optgroup>
                                        <optgroup label="üòî Negative">
                                            @foreach (var mood in MoodCategories.GetMoodsByCategory("Negative") ?? new())
                                            {
                                                <option value="@mood">@mood</option>
                                            }
                                        </optgroup>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Entry Date *</label>
                                    <input type="date" class="form-control" @bind="CurrentEntry!.EntryDate" required />
                                </div>
                            </div>
                        </div>

                        <!-- Secondary Moods -->
                        @if (SecondaryMoodOptions != null && SecondaryMoodOptions.Count > 0)
                        {
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Secondary Mood 1 (Optional)</label>
                                        <small class="text-muted d-block mb-2">Additional mood from same category</small>
                                        <select class="form-select" @bind="CurrentEntry!.SecondaryMood1" @bind:after="() => StateHasChanged()">
                                            <option value="">None</option>
                                            @foreach (var mood in SecondaryMoodOptions)
                                            {
                                                @if (mood != CurrentEntry.PrimaryMood)
                                                {
                                                    <option value="@mood">@mood</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Secondary Mood 2 (Optional)</label>
                                        <small class="text-muted d-block mb-2">Another mood from same category</small>
                                        <select class="form-select" @bind="CurrentEntry!.SecondaryMood2" @bind:after="() => StateHasChanged()">
                                            <option value="">None</option>
                                            @foreach (var mood in SecondaryMoodOptions)
                                            {
                                                @if (mood != CurrentEntry.PrimaryMood)
                                                {
                                                    <option value="@mood">@mood</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mb-4" role="alert">
                                ‚ÑπÔ∏è Select a primary mood to choose secondary moods
                            </div>
                        }

                        <!-- Category Full Width -->
                        <div class="mb-4">
                            <label class="form-label">Category</label>
                            <input type="text" class="form-control" @bind="CategoryInput" @bind:after="FilterCategories" placeholder="Select or type a category..." />
                            <small class="text-muted d-block mt-2"><strong>Suggestions:</strong></small>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var category in FilteredCategories)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-primary" @onclick="() => SelectCategory(category)">
                                        @category
                                    </button>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(CurrentEntry?.Category))
                            {
                                <small class="text-muted d-block mt-2">Selected: <strong>@CurrentEntry.Category</strong></small>
                            }
                        </div>

                        <!-- Tags Full Width -->
                        <div class="mb-4">
                            <label class="form-label">Tags (Add Multiple)</label>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" @bind="TagInput" placeholder="Type tags separated by comma..." @onkeypress="OnTagKeyPress" />
                                <button class="btn btn-outline-secondary" type="button" @onclick="AddTag">+ Add</button>
                            </div>
                            <small class="text-muted d-block">üí° Tip: Type tags separated by commas, press Enter or click Add, or click suggestions below</small>
                            <small class="text-muted d-block mt-2"><strong>Suggestions:</strong></small>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var tag in FilteredTags)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-info" @onclick="() => AddTagDirectly(tag)">
                                        @tag
                                    </button>
                                }
                            </div>
                            <div class="mt-3">
                                @if (CurrentEntry?.Tags != null && CurrentEntry.Tags.Count > 0)
                                {
                                    <small class="text-muted d-block mb-2"><strong>Added Tags (@CurrentEntry.Tags.Count):</strong></small>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var tag in CurrentEntry.Tags)
                                        {
                                            <span class="badge bg-success text-white p-2">
                                                @tag
                                                <button type="button" class="btn-close btn-close-white ms-2" aria-label="Close" @onclick="() => RemoveTag(tag)" style="font-size: 0.8rem;"></button>
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <small class="text-muted">No tags added yet</small>
                                }
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/journal" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary" disabled="@(IsEditMode && CurrentEntry?.IsLocked == true)">
                                @(IsEditMode ? "Update Journal" : "Save Journal")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Unlock Dialog -->
@if (ShowUnlockDialog)
{
    <UnlockJournalDialog 
        IsVisible="true"
        PasswordType="@CurrentEntry?.PasswordType"
        OnUnlockConfirmed="HandleUnlockForEdit"
        OnCancel="CloseUnlockDialog" />
}

<style>
    textarea {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        resize: vertical;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .card {
        border-radius: 8px;
    }

    .badge {
        padding: 0.35rem 0.65rem;
    }
</style>

@code {
    [Parameter]
    public int EntryId { get; set; }

    private JournalEntry CurrentEntry = new();
    private List<string> AllMoods = new();
    private List<string> SecondaryMoodOptions = new();
    private string TagInput = "";
    private string CategoryInput = "";
    private bool IsEditMode = false;
    private bool ShowUnlockDialog = false;

    // Category suggestions
    private List<string> AllCategories = new()
    {
        "Personal Growth",
        "Work/Career",
        "Relationships",
        "Health & Wellness",
        "Finance",
        "Education",
        "Travel & Adventure",
        "Creative Projects",
        "Spirituality & Mindfulness",
        "Family & Home",
        "Hobbies & Interests",
        "Social Life"
    };

    private List<string> FilteredCategories = new();

    // Tag suggestions
    private List<string> AllTags = new()
    {
        "Achievement",
        "Challenge",
        "Growth",
        "Reflection",
        "Goal",
        "Motivation",
        "Breakthrough",
        "Lesson Learned",
        "Gratitude",
        "Milestone",
        "Struggle",
        "Success",
        "Learning",
        "Inspiration",
        "Memorable",
        "Productive",
        "Relaxing",
        "Energizing",
        "Important",
        "Random Thoughts"
    };

    private List<string> FilteredTags = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            AllMoods = MoodCategories.GetAllMoods() ?? new();
            SecondaryMoodOptions = new List<string>();
            FilteredCategories = AllCategories.ToList();
            FilteredTags = AllTags.ToList();
            CurrentEntry = new()
            {
                EntryDate = DateTime.Now,
                Tags = new List<string>(),
                Category = ""
            };

            if (EntryId > 0)
            {
                IsEditMode = true;
                var entry = await JournalService.GetEntryByIdAsync(EntryId);
                if (entry != null)
                {
                    CurrentEntry = entry;
                    
                    // Ensure all collections are initialized
                    if (CurrentEntry.Tags == null)
                        CurrentEntry.Tags = new List<string>();
                    
                    if (string.IsNullOrEmpty(CurrentEntry.Category))
                        CurrentEntry.Category = "";
                    
                    // Update secondary mood options based on primary mood
                    if (!string.IsNullOrEmpty(CurrentEntry.PrimaryMood))
                    {
                        var category = MoodCategories.GetMoodType(CurrentEntry.PrimaryMood);
                        if (!string.IsNullOrEmpty(category))
                        {
                            SecondaryMoodOptions = MoodCategories.GetMoodsByCategory(category) ?? new();
                        }
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in OnInitializedAsync: {ex.Message}");
            // Ensure defaults are set even if error occurs
            SecondaryMoodOptions = SecondaryMoodOptions ?? new();
            CurrentEntry.Tags = CurrentEntry.Tags ?? new();
        }
    }

    private void OnPrimaryMoodChanged()
    {
        try
        {
            CurrentEntry.SecondaryMood1 = "";
            CurrentEntry.SecondaryMood2 = "";
            
            if (!string.IsNullOrEmpty(CurrentEntry.PrimaryMood))
            {
                var moodCategory = MoodCategories.GetMoodType(CurrentEntry.PrimaryMood);
                if (!string.IsNullOrEmpty(moodCategory))
                {
                    var moods = MoodCategories.GetMoodsByCategory(moodCategory);
                    SecondaryMoodOptions = moods ?? new();
                }
                else
                {
                    SecondaryMoodOptions = new();
                }
            }
            else
            {
                SecondaryMoodOptions = new();
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in OnPrimaryMoodChanged: {ex.Message}");
            SecondaryMoodOptions = new();
            StateHasChanged();
        }
    }

    private void OnPrimaryCategoryChanged(ChangeEventArgs e)
    {
        var category = e.Value?.ToString() ?? "";
        CurrentEntry.PrimaryMood = "";
        CurrentEntry.SecondaryMood1 = "";
        CurrentEntry.SecondaryMood2 = "";
        
        if (!string.IsNullOrEmpty(category))
        {
            SecondaryMoodOptions = MoodCategories.GetMoodsByCategory(category) ?? new();
        }
        else
        {
            SecondaryMoodOptions = new();
        }
        
        StateHasChanged();
    }

    private void UpdateSecondaryMoodOptions()
    {
        try
        {
            if (!string.IsNullOrEmpty(CurrentEntry?.PrimaryMood))
            {
                var moodCategory = MoodCategories.GetMoodType(CurrentEntry.PrimaryMood);
                if (!string.IsNullOrEmpty(moodCategory))
                {
                    var moods = MoodCategories.GetMoodsByCategory(moodCategory);
                    SecondaryMoodOptions = moods ?? new();
                }
                else
                {
                    SecondaryMoodOptions = new();
                }
            }
            else
            {
                SecondaryMoodOptions = new();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating secondary mood options: {ex.Message}");
            SecondaryMoodOptions = new();
        }
    }

    private void OnTagKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || e.Key == ",")
        {
            AddTag();
        }
    }

    private void RemoveTag(string tag)
    {
        if (CurrentEntry.Tags != null)
        {
            CurrentEntry.Tags.Remove(tag);
            FilterTags();
            StateHasChanged();
        }
    }

    private void AddTag()
    {
        if (string.IsNullOrWhiteSpace(TagInput))
            return;

        if (CurrentEntry.Tags == null)
            CurrentEntry.Tags = new List<string>();

        // Split by comma and process each tag
        var tags = TagInput.Split(',');
        foreach (var tag in tags)
        {
            var trimmedTag = tag.Trim();
            if (!string.IsNullOrWhiteSpace(trimmedTag) && !CurrentEntry.Tags.Contains(trimmedTag))
            {
                CurrentEntry.Tags.Add(trimmedTag);
            }
        }

        TagInput = "";
        FilterTags();
        StateHasChanged();
    }

    private void AddTagDirectly(string tag)
    {
        if (CurrentEntry.Tags == null)
            CurrentEntry.Tags = new List<string>();
            
        if (!CurrentEntry.Tags.Contains(tag))
        {
            CurrentEntry.Tags.Add(tag);
            // Append with comma for visual feedback
            if (string.IsNullOrEmpty(TagInput))
            {
                TagInput = tag + ", ";
            }
            else
            {
                TagInput += tag + ", ";
            }
            StateHasChanged();
            // Keep suggestions visible - don't call FilterTags yet
        }
    }

    private void FilterTags()
    {
        // Always show all tags that haven't been added yet
        FilteredTags = AllTags.Where(t => CurrentEntry.Tags == null || !CurrentEntry.Tags.Contains(t)).ToList();
    }

    private void SelectCategory(string category)
    {
        if (CurrentEntry != null)
        {
            CurrentEntry.Category = category;
            CategoryInput = category;
            StateHasChanged();
        }
    }

    private void FilterCategories()
    {
        if (string.IsNullOrWhiteSpace(CategoryInput))
        {
            FilteredCategories = AllCategories.ToList();
        }
        else
        {
            FilteredCategories = AllCategories
                .Where(c => c.Contains(CategoryInput, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void HandleContentChanged(string newContent)
    {
        if (CurrentEntry != null)
        {
            CurrentEntry.Content = newContent;
            UpdateWordCount();
            StateHasChanged();
        }
    }

    private void UpdateWordCount()
    {
        if (CurrentEntry == null || CurrentEntry.Content == null)
        {
            if (CurrentEntry != null)
                CurrentEntry.WordCount = 0;
            return;
        }

        var text = System.Text.RegularExpressions.Regex.Replace(CurrentEntry.Content, "<[^>]*>", "");
        CurrentEntry.WordCount = text.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
    }

    private void OpenUnlockDialog()
    {
        ShowUnlockDialog = true;
    }

    private void CloseUnlockDialog()
    {
        ShowUnlockDialog = false;
    }

    private async Task HandleUnlockForEdit(string password)
    {
        if (CurrentEntry == null) return;

        try
        {
            bool isUnlocked = await JournalService.UnlockEntryAsync(CurrentEntry.Id, password, SecurityService);
            
            if (!isUnlocked)
            {
                await ShowAlert("Error", "Incorrect password. Please try again.");
                return;
            }

            CloseUnlockDialog();
            
            var entry = await JournalService.GetEntryByIdAsync(CurrentEntry.Id);
            if (entry != null)
            {
                CurrentEntry = entry;
            }
            
            await ShowAlert("Success", "Journal unlocked! You can now edit it.");
        }
        catch (Exception ex)
        {
            await ShowAlert("Error", $"Error: {ex.Message}");
        }
    }

    private async Task SaveEntry()
    {
        try
        {
            if (CurrentEntry?.IsLocked == true)
            {
                await ShowAlert("Error", "Cannot save a locked journal. Unlock it first.");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentEntry?.Title))
            {
                await ShowAlert("Validation Error", "Please enter a title");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentEntry?.Content))
            {
                await ShowAlert("Validation Error", "Please write some content");
                return;
            }

            if (string.IsNullOrWhiteSpace(CurrentEntry?.PrimaryMood))
            {
                await ShowAlert("Validation Error", "Please select a mood category and then choose a primary mood");
                return;
            }

            await JournalService.SaveAsync(CurrentEntry);
            await StreakService.UpdateStreakAsync();
            await ShowAlert("Success", IsEditMode ? "Journal updated successfully!" : "Journal saved successfully!");
            NavigationManager.NavigateTo("/journal");
        }
        catch (Exception ex)
        {
            await ShowAlert("Error", $"Failed to save journal: {ex.Message}");
        }
    }

    private async Task ShowAlert(string title, string message)
    {
        await JS.InvokeVoidAsync("alert", $"{title}\n\n{message}");
    }
}
