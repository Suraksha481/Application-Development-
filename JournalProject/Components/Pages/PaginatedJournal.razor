@page "/paginated-journal"
@using JournalProject.Services
@using JournalProject.Models
@inject JournalService JournalService
@inject ExportService ExportService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<div class="container mt-4">
    <h2>Journal Entries - Paginated View</h2>
    
    <div class="row">
        <!-- Left Panel - Export Settings -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üì§ Export Format</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="exportFormat" id="pdf" value="pdf" @onchange="UpdateExportFormat" checked>
                            <label class="form-check-label" for="pdf">
                                üìÑ PDF
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="exportFormat" id="csv" value="csv" @onchange="UpdateExportFormat">
                            <label class="form-check-label" for="csv">
                                üìä CSV
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exportFormat" id="text" value="text" @onchange="UpdateExportFormat">
                            <label class="form-check-label" for="text">
                                üìù Text
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status Messages -->
            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    ‚úÖ @SuccessMessage
                    <button type="button" class="btn-close" @onclick='() => SuccessMessage = ""'></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    ‚ùå @ErrorMessage
                    <button type="button" class="btn-close" @onclick='() => ErrorMessage = ""'></button>
                </div>
            }
        </div>

        <!-- Right Panel - Entries List -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    @if (CurrentPagination != null && CurrentPagination.Items.Count > 0)
                    {
                        <div class="entries-list">
                            @foreach (var entry in CurrentPagination.Items)
                            {
                                <div class="entry-card card mb-3">
                                    <div class="card-header d-flex justify-content-between">
                                        <div>
                                            <h5 class="mb-0">@entry.Title</h5>
                                            <small class="text-muted">@entry.CreatedAt.ToString("dddd, MMMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => ViewEntry(entry)">üëÅÔ∏è View</button>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditEntry(entry)">‚úèÔ∏è Edit</button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteEntry(entry)">üóëÔ∏è Delete</button>
                                        <button class="btn btn-sm btn-outline-success" @onclick="() => ExportEntry(entry)" disabled="@IsExporting">
                                            @if (IsExporting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                                <span>Exporting...</span>
                                            }
                                            else
                                            {
                                                <span>üì§ Export</span>
                                            }
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pagination Controls -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(CurrentPagination.HasPreviousPage ? "" : "disabled")">
                                    <button class="page-link" @onclick="PreviousPage" disabled="@(!CurrentPagination.HasPreviousPage)">
                                        Previous
                                    </button>
                                </li>

                                @for (int i = 1; i <= CurrentPagination.TotalPages; i++)
                                {
                                    var pageNumber = i;
                                    <li class="page-item @(CurrentPagination.CurrentPage == pageNumber ? "active" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(pageNumber)">
                                            @pageNumber
                                        </button>
                                    </li>
                                }

                                <li class="page-item @(CurrentPagination.HasNextPage ? "" : "disabled")">
                                    <button class="page-link" @onclick="NextPage" disabled="@(!CurrentPagination.HasNextPage)">
                                        Next
                                    </button>
                                </li>
                            </ul>
                        </nav>

                        <!-- Page Info -->
                        <div class="text-center mt-3">
                            <p class="text-muted">
                                Showing @((CurrentPagination.CurrentPage - 1) * CurrentPagination.PageSize + 1) 
                                to @Math.Min(CurrentPagination.CurrentPage * CurrentPagination.PageSize, CurrentPagination.TotalItems) 
                                of @CurrentPagination.TotalItems entries
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>No journal entries found. Start journaling today!</p>
                            <button class="btn btn-primary" @onclick="CreateNewEntry">Create New Entry</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Page Size Selector -->
    <div class="mt-4">
        <label for="pageSize">Entries per page:</label>
        <select id="pageSize" class="form-select" style="width: auto; display: inline-block;" @onchange="ChangePageSize">
            <option value="5">5</option>
            <option value="10" selected>10</option>
            <option value="15">15</option>
            <option value="20">20</option>
        </select>
    </div>
</div>

@code {
    private PaginationModel<JournalEntry> CurrentPagination = new();
    private int CurrentPageSize = 10;
    private string SelectedFormat = "pdf";
    private bool IsExporting = false;
    private string SuccessMessage = "";
    private string ErrorMessage = "";

    protected override void OnInitialized()
    {
        LoadEntries();
    }

    private void LoadEntries()
    {
        CurrentPagination = JournalService.GetPaginatedEntries(1, CurrentPageSize);
    }

    private void NextPage()
    {
        if (CurrentPagination.HasNextPage)
        {
            CurrentPagination = JournalService.GetPaginatedEntries(CurrentPagination.CurrentPage + 1, CurrentPageSize);
        }
    }

    private void PreviousPage()
    {
        if (CurrentPagination.HasPreviousPage)
        {
            CurrentPagination = JournalService.GetPaginatedEntries(CurrentPagination.CurrentPage - 1, CurrentPageSize);
        }
    }

    private void GoToPage(int pageNumber)
    {
        if (pageNumber >= 1 && pageNumber <= CurrentPagination.TotalPages)
        {
            CurrentPagination = JournalService.GetPaginatedEntries(pageNumber, CurrentPageSize);
        }
    }

    private void ChangePageSize(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString() ?? "", out int newSize))
        {
            CurrentPageSize = newSize;
            LoadEntries();
        }
    }

    private void UpdateExportFormat(ChangeEventArgs e)
    {
        SelectedFormat = e.Value?.ToString() ?? "pdf";
    }

    private void EditEntry(JournalEntry entry)
    {
        NavigationManager.NavigateTo($"/add-journal/{entry.Id}");
    }

    private void ViewEntry(JournalEntry entry)
    {
        NavigationManager.NavigateTo($"/view-journal/{entry.Id}");
    }

    private async Task ExportEntry(JournalEntry entry)
    {
        IsExporting = true;
        ErrorMessage = "";
        SuccessMessage = "";

        try
        {
            var entriesToExport = new List<JournalEntry> { entry };
            string fileName = entry.Title?.Replace(" ", "_") ?? "JournalExport";

            string fileExtension = SelectedFormat.ToLower() switch
            {
                "pdf" => ".pdf",
                "csv" => ".csv",
                "text" => ".txt",
                _ => ".txt"
            };

            fileName = fileName + "_" + DateTime.Now.ToString("yyyyMMdd_HHmmss") + fileExtension;

            var downloadsPath = Environment.GetFolderPath(Environment.SpecialFolder.UserProfile);
            downloadsPath = Path.Combine(downloadsPath, "Downloads");

            if (!Directory.Exists(downloadsPath))
            {
                downloadsPath = Environment.GetFolderPath(Environment.SpecialFolder.MyDocuments);
            }

            var fullPath = Path.Combine(downloadsPath, fileName);

            switch (SelectedFormat.ToLower())
            {
                case "pdf":
                    await ExportService.ExportToPDF(entriesToExport, fullPath);
                    break;

                case "csv":
                    await ExportService.ExportToCSV(entriesToExport, fullPath);
                    break;

                case "text":
                    await ExportService.ExportToText(entriesToExport, fullPath);
                    break;

                default:
                    ErrorMessage = "Invalid export format selected.";
                    IsExporting = false;
                    return;
            }

            if (File.Exists(fullPath))
            {
                SuccessMessage = $"‚úÖ Successfully exported 1 entries! Saved to: {fullPath}";
            }
            else
            {
                ErrorMessage = "File export failed: File was not created.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Export failed: {ex.Message}";
        }
        finally
        {
            IsExporting = false;
        }
    }

    private async Task DeleteEntry(JournalEntry entry)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this journal entry? This action cannot be undone.");
        
        if (confirmed)
        {
            try
            {
                await JournalService.DeleteAsync(entry.EntryDate);
                await JS.InvokeVoidAsync("alert", "Journal entry deleted successfully!");
                LoadEntries();
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Error deleting entry: {ex.Message}");
            }
        }
    }

    private void CreateNewEntry()
    {
        // Navigate to create entry page
        // Navigation.NavigateTo("/rich-text-editor");
    }
}
